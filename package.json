{
  "name": "vscode-http",
  "displayName": "vscode-http",
  "description": "A HTTP Client for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-http",
          "title": "HTTP 客户端",
          "icon": "./resources/icon.svg"
        }
      ]
    },
    "views": {
      "vscode-http": [
        {
          "id": "vscode-http.requestTree",
          "name": "HTTP 请求",
          "icon": "$(link)"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-http.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-http.manageEnvironments",
        "title": "环境管理"
      },
      {
        "command": "vscode-http.setCurrentEnvironment",
        "title": "当前环境"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "vscode-http.manageEnvironments",
          "when": "view == vscode-http.requestTree && viewItem == project"
        },
        {
          "command": "vscode-http.setCurrentEnvironment",
          "when": "view == vscode-http.requestTree && viewItem == project"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}